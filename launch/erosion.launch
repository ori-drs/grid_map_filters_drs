<?xml version="1.0" encoding="utf-8"?>
<launch>
	<arg name="erosion_size"                 default="4"/>
	<arg name="input_topic"                 default="/elevation_mapping/elevation_map_raw"/>
	<arg name="output_topic"                 default="/elevation_mapping/elevation_map_eroded"/>


  <!-- Elevation map filter node. -->
  <node pkg="grid_map_filters_drs" type="grid_map_erosion_node" name="grid_map_erosion_node" output="screen" >
	  <param name="erosion_size" value="$(arg erosion_size)" />
	  <param name="input_topic" value="$(arg input_topic)" />
	  <param name="output_topic" value="$(arg output_topic)" />
		  
  </node>

</launch>
